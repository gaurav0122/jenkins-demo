pipeline {
    agent any
        stages {
            stage('Build Application') {
                steps {
                    sh 'mvn -f maven-tomcat/pom.xml test package'
                }
                post {
                    success {
                        echo 'Archiving the artifacts'
                        archiveArtifacts artifacts: '**/*.war'
                    }
                }
            }
        }
}
